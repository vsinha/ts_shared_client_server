{
    "extends": [
        "tslint:latest"
    ],
    "rules": {
        "no-unused-expression": true,
        "no-duplicate-variable": true,
        "no-unused-variable": [
            true,
            {
                "ignore-pattern": "^_"
            }
        ],
        "curly": true,
        "class-name": true,
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": true,
        "interface-name": [
            false
        ],
        "max-line-length": [
            140
        ],
        "quotemark": [
            "single"
        ],
        "ordered-imports": [
            false
        ],
        "arrow-parens": [
            false
        ],
        "one-line": [
            "check-open-brace"
        ],
        "max-classes-per-file": [
            false
        ],
        "object-literal-sort-keys": [
            false
        ],
        "no-bitwise": false
    }
}